          <p>
            <m>y = 3x - 4</m>
          </p>
        </statement>
      </task>

      <task>
        <statement>
          <p>
            <m>y = \frac{1}{2}x + 6</m>
          </p>
        </statement>
      </task>

      <task>
        <statement>
          <p>
            <m>y = -4.2x + 5</m>
          </p>
        </statement>
      </task>
